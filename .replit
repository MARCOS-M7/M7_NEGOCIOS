
entrypoint = "index.js"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cd backend && npm install && npm start"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Start Full System"

[[workflows.workflow]]
name = "Run Backend"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm install && npm start"

[[workflows.workflow]]
name = "Run Frontend"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && npm start"

[[workflows.workflow]]
name = "Start Full System"
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm install && NODE_ENV=development npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm install && REACT_APP_API_URL=http://localhost:4000/api npm start"

[[ports]]
localPort = 3000
externalPort = 80
